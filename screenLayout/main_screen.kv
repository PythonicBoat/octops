<MainScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/img/main_splash.png'
        Rectangle:
            pos: 214,399
            size: 453,227
            source: 'assets/img/main_logo.png'
        Rectangle:
            pos: 132,419
            size: 210,210
            source: 'assets/img/main_mascot.png'
            
    FloatLayout:
        orientation: "vertical"

        Button:
            size_hint: None,None
            size: dp(147), dp(61)
            pos: dp(230), dp(208)
            background_color: 0,0,0,0
            on_press: root.manager.current = 'map'
            
            Image:
                source: 'assets/img/main_btn_play.png'
                size_hint: (1, 1)
                size: dp(147), dp(61)
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            size_hint: None,None
            size: dp(147), dp(61)
            pos: dp(231), dp(129)
            background_color: 0,0,0,0
            on_press: app.stop()

            Image:
                source: 'assets/img/main_btn_quit.png'
                size_hint: (1, 1)
                size: dp(147), dp(61)
                center_x: self.parent.center_x
                center_y: self.parent.center_y
