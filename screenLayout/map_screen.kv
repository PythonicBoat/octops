<MapScreen>:
    canvas.before:
        #map component
        Rectangle:
            source: "assets/img/map_map.png"
            size: self.size
            pos: self.pos



    FloatLayout:
        Button:
            size_hint: None,None
            size: (80, 80)
            pos: (12, 800)
            background_color: 0,0,0,0
            on_press: root.manager.current = 'main'

            Image:
                source: 'assets/img/button_return.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        #siteB
        Button:
            size_hint: None,None
            size: 158, 158
            pos: 55, 600
            background_color: 0,0,0,0
            on_press: root.manager.current = 'siteb'

            Image:
                source: 'assets/img/map_siteB.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        #siteA
        Button:
            size_hint: None,None
            size: 158, 158
            pos: 550, 650
            background_color: 0,0,0,0
            on_press: root.manager.current = 'sitea'

            Image:
                source: 'assets/img/map_siteA.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        #doors
        Button:
            size_hint: None,None
            size: 158, 158
            pos: 550, 250
            background_color: 0,0,0,0
            on_press: root.manager.current = 'doors'

            Image:
                source: 'assets/img/map_doors.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        #spawn
        Button:
            size_hint: None,None
            size: 158, 158
            pos: 55, 30
            background_color: 0,0,0,0
            on_press: root.manager.current = 'spawn'

            Image:
                source: 'assets/img/map_spawn.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
