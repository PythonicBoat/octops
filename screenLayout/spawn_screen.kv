<SpawnScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/img/spawn_splash.png'
    
    FloatLayout:
        size_hint: None, None
        size: self.size  # Set the size of the FloatLayout to 1200x400 pixels
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Center the FloatLayout
        Button:
            size_hint: None,None
            size: dp(60), dp(60)
            pos: dp(12), dp(523)
            background_color: 0,0,0,0
            on_press: root.manager.current = 'map'

            Image:
                source: 'assets/img/button_return.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        Slider:
            id: slide1
            orientation: 'vertical'
            size_hint_x: None
            width: 50
            height: 500
            pos_hint: {'center_x': 0.3, 'center_y': 0.5}  # Adjust position as needed

        Slider:
            id: slide2
            orientation: 'vertical'
            size_hint_x: None
            width: 50
            height: 500
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Centered

        Slider:
            id: slide3
            orientation: 'vertical'
            size_hint_x: None
            width: 50
            height: 500
            pos_hint: {'center_x': 0.7, 'center_y': 0.5}  # Adjust position as needed

        #verify_btn
        Button:
            size_hint: None,None
            size: dp(189), dp(68)
            pos: dp(204), dp(41)
            background_color: 0,0,0,0
            on_press: root.check_slider_values()

            Image:
                source: 'assets/img/doors_btn_verify.png'
                size_hint: (1, 1)
                size: dp(189), dp(68)
                center_x: self.parent.center_x
                center_y: self.parent.center_y
