<MapScreen>:
    canvas.before:
        #map component
        Rectangle:
            source: "assets/img/map_map.png"
            size: self.size
            pos: self.pos

        #siteB component
        Rectangle:
            source: "assets/img/map_siteB.png"
            size: 158, 158
            pos: self.pos

        Rectangle:
            source: "assets/img/map_siteA.png"
            size: 158, 158
            pos: self.pos

        Rectangle:
            source: "assets/img/map_doors.png"
            size: 158, 158
            pos: self.pos

        Rectangle:
            source: "assets/img/map_spawn.png"
            size: 158, 158
            pos: self.pos

    FloatLayout:
        Button:
            size_hint: None,None
            size: (80, 80)
            pos: (12, 600)
            background_color: 0,0,0,0
            on_press: root.manager.current = 'main'

            Image:
                source: 'assets/img/button_return.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
