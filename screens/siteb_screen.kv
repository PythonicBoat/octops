<SiteBScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/img/siteb_splash.png'

        Rectangle:
            source: "assets/img/bomb.png"
            size: 596, 516
            pos: 120,280
        
        Rectangle:
            source: "assets/img/button_defuse.png"
            size: 274, 91
            pos: 311,84

        Rectangle:
            source: "assets/img/defuse_bg.png"
            size: 75, 75
            pos: 550,130

        Rectangle:
            source: "assets/img/defuse_bg2.png"
            size: 66, 75
            pos: 280,55

    FloatLayout:
        Button:
            size_hint: None,None
            size: (80, 80)
            pos: (12, 800)
            background_color: 0,0,0,0
            on_press: root.manager.current = 'map'

            Image:
                source: 'assets/img/button_return.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y