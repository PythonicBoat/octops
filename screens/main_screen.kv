<MainScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/img/main_splash.png'
        Rectangle:
            pos: 214,399
            size: 453,227
            source: 'assets/img/main_logo.png'
        Rectangle:
            pos: 132,419
            size: 210,210
            source: 'assets/img/main_mascot.png'
    BoxLayout:
        padding: 50
        spacing: 20
        orientation: "vertical"

        Button:
            text: 'Play'
            pos_hint: {'center_x': 0.5}
            size_hint: None,None
            size: 134,62
            on_press: root.manager.current = 'map'

        Button:
            text: 'Quit'
            pos_hint: {'center_x': 0.5}
            size_hint: None,None
            size: 134,62
            on_press: root.manager.current = 'test'